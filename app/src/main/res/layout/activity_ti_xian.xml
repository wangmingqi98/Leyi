<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    tools:context="com.leyi.view.activity.WithdrawDepositctivity"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:id="@+id/title_zixun"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="#ff7830">

        <ImageView
            android:id="@+id/zhuce_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/zuo_bai"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>
   <TextView
       android:padding="10dp"
       android:background="#fff"
       android:textColor="#222222"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="预计1-2个工作日到账"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d7d7d7"></View>

    <ListView
        android:id="@+id/bankcardlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#999"
            android:layout_margin="10dp"
            android:text="可用余额(元)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/canuse_money"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#222222"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#d7d7d7"></View>


        <LinearLayout
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"


            >
            <TextView
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="22sp"

                />
            <EditText
                android:phoneNumber="true"
                android:hint="请输入提现金额"
                android:textSize="14sp"
                android:textColor="#999"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:id="@+id/tixian_edit"
                />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center"
                android:text="全部提现"
                android:id="@+id/allmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff7830"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#d7d7d7"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"></View>

    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手续费："/>
        <TextView
            android:id="@+id/shouxufei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#666"

            android:text="0.00元"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际到账："/>
        <TextView
            android:id="@+id/shijidaozhang"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00元"/>

    </LinearLayout>

        <TextView
            android:id="@+id/next_stepshen"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"

            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"

            android:text="确认提现"
            android:textColor="#fff" />
    <TextView
        android:id="@+id/next_stepqian"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"

        android:background="@drawable/btn_shapeff88"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:text="确认提现"
        android:textColor="#fff" />



    </LinearLayout>



