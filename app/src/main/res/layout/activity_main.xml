<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/mains"
    >






    <FrameLayout
        android:id="@+id/flHomeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/xian"
        android:background="#f3f3f3"
    >
    </FrameLayout>

<View
    android:id="@+id/xian"
    android:layout_above="@+id/ieMainBottom"


    android:layout_width="match_parent"
    android:layout_height="2px"
    android:background="#d7d7d7"></View>
    <LinearLayout
        android:id="@+id/ieMainBottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioGroup
            android:id="@+id/tabGroup"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:paddingTop="10px"
                android:id="@+id/rbTabHome"
                style="@style/TabBtn"
                android:checked="true"
                android:drawableTop="@drawable/home_bottom_tabone"

                />

            <RadioButton
                android:id="@+id/rbTabShop"
                style="@style/TabBtn"
                android:drawableTop="@drawable/home_bottom_tabtwo"
                />

            <RadioButton
                android:id="@+id/rbTabCar"
                style="@style/TabBtn"
                android:drawableTop="@drawable/home_bottom_tabthree"
                />

            <RadioButton
                android:id="@+id/rbTabMy"
                style="@style/TabBtn"
                android:checked="false"
                android:drawableTop="@drawable/home_bottom_tabfour"
                />


        </RadioGroup>


    </LinearLayout>

</RelativeLayout>
