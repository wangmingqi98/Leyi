<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.leyijf.view.activity.DrawPsdActivity">
<TextView
    android:id="@+id/shoushi_zuoshang_tv"
    android:padding="10dp"
    android:textSize="14sp"
    android:textColor="#ff7380"
    android:text="返回"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</TextView>
    <LinearLayout
android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <com.leyijf.weight.RoundImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/head" />



        <TextView
            android:id="@+id/user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="159****456"

            android:textColor="#666666" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="请输入手势密码"

            android:textColor="#ff7380" />
    </LinearLayout>

    <com.leyijf.weight.grsture.CustomLockView
        android:id="@+id/lv_lock"
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        app:color_error_ring="#e91515"
        app:color_on_ring="#ff7380"
        app:color_up_ring="#ffe3df"
        app:inner_background_width="19dp"
        app:inner_ring_width="14dp"
        app:outer_ring_spacing_width="50dp" />



    <TextView
        android:id="@+id/forgect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="忘记手势密码"
        android:textColor="#999999"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
