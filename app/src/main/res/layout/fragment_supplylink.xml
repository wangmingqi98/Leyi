<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f3f3f3"
    android:id="@+id/smart"
    tools:context="com.leyi.view.fragment.licaishop_fragment.SupplylinkFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/paixu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="按年利率由高至低"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/down"
                android:layout_gravity="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:background="#d7d7d7"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </View>


        <ListView

            android:id="@+id/novice_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#f3f3f3"
            android:dividerHeight="20dp"></ListView>
    </LinearLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
