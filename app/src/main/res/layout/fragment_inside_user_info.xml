                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="0"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
