                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text=""
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="借款次数"
                    android:textSize="14sp"
                    />
                <TextView

                    android:id="@+id/company_count"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="0次"
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="逾期金额"
                    android:textSize="14sp"
                    />
                <TextView

                    android:id="@+id/company_overdue_count"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="0"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:padding="5dp" android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7830"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7830"
                    android:text=""
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="法人代表"
                    android:textSize="14sp"
                    />
                <TextView

                    android:id="@+id/legal_person"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="*"
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="注册资金"
                    android:textSize="14sp"
                    />
                <TextView

                    android:id="@+id/register_money"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:text="0"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
