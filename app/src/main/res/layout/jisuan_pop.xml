<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/jisuan_popbank"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="#f3f3f3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/close_hui"
            />
        <TextView
            android:layout_weight="4"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="收益计算器"/>

<ImageView
    android:id="@+id/jisuan_close"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:src="@drawable/close_hui"
    />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_edittext">

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资金额"
            android:textSize="15sp"
            android:textColor="#666" />

        <EditText
            android:id="@+id/jine_shuru"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
           android:background="@null"
            android:hint="请输入投资金额"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="#AAAAAA"
            android:textSize="14sp" />

        <TextView
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="15sp"
            android:textColor="#666" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="投资期限"/>
            <TextView
                android:id="@+id/touziqixian"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#ff7830"
                android:text="3月"/>

        </LinearLayout>

        <View
            android:layout_width="2px"
            android:background="#BDC7D8"
            android:layout_height="match_parent"></View>


        <LinearLayout
android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="预计收益"/>
            <TextView
                android:id="@+id/yujishouyi"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#ff7830"
                android:text="0元"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>


